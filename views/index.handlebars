<div class="container">
    <div class="jumbotron">
        <img src="https://images1.westword.com/imager/u/original/9551593/jb_burger.jpg" alt="A juicy burger" width="400px" height="400px">
            <h1 class="text-center">Eat-Da-Burger</h1   >
    </div>
</div>

<div class="row">

	<div class="col-md-4 col-md-offset-1">
	 <div class="panel-panel default">
	 	<h1>Not Eaten</h1>
	 	<ul class="list-group">
	 		{{#each burgers}}
	 		 {{#unless this.devoured}}
	 		 <li class="list-group-item">
	 		  <div class="input-group">
	 		  	<p class="lead">{{this.burger_name}}</p>
	 		  	<span class="input-group-btn">

	 		  		<form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
	 		  			<input type="hidden" name="devoured" value="false">
	 		  			<button class="btn btn-default btn-lg" type="submit">Devour it!</button>
	 		  		</form>
	 		  	</span>
	 		  </div>
	 		 </li>
	 		 {{/unless}}
	 		{{/each}}
	 	</ul>

	 </div>
	</div>

	
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h1>Devoured Burgers</h1>
			<div class="panel panel-default">
				<ul class="list-group">
					{{#each burgers}}
					 {{#if this.devoured}}
					 <li class="list-group-item">
					 	<p class="lead">{{this.burger_name}}</p>
					 </li>
					 {{/if}}
					  {{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead">Add burger & click submit</p>
		
		<form class="create-update-form" action="/api/burgers/" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="btn btn-default btn-lg" type="submit">Submit</button>
		</form>
	</div>

 </div>